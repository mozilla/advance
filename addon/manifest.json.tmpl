{
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "strict_min_version": "54.0a1",
      "id": "support@laserlike.com"
    }
  },
  "name": "{{name}}",
  "version": "{{version}}",
  "description": "{{description}}",
  "author": "{{{author}}}",
  "homepage_url": "{{{homepage}}}",
  "background": {
    "scripts": [
      "background/index.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/laserlike_ff_icon.png",
    "browser_style": true,
    "default_title": "Laserlike Read Next"
  },
  "sidebar_action": {
    "default_icon": "icons/laserlike_ff_icon.png",
    "default_title": "Laserlike",
    "default_panel": "sidebar/panel.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "*://*.laserlike.com/",
    // "*://localhost/", // TO BE REMOVED BEFORE publishing
    "cookies",
    "tabs",
    "menus"
  ]
}